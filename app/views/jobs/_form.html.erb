<%= form_for @job do |f| %>
	<% if @job.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@job.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @job.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title, required: true,class:"form-control form-control-lg" %><br>
	<br>
	<%= f.label :description %><br>
	<%= f.text_area :description, required: true,class:"form-control form-control-lg" %><br>
  <%= f.label :stipend %><br>
	<%= f.text_field :stipend, required: true,class:"form-control form-control-lg" %><br>
	<br>
	<br>
	<%= f.submit class:'btn btn-primary' %>
<% end %>
